<?xml version="1.0" encoding="UTF-8"?><esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.espertech.com/schema/esper" xsi:schemaLocation="http://www.espertech.com/schema/esper http://www.espertech.com/schema/esper/esper-configuration-4-0.xsd">	<event-type-auto-name package-name="event"/>	<database-reference name="logcenter_builtin_db">		<!-- For a complete list of properties see Apache DBCP. -->		<datasourcefactory-connection class-name="org.apache.commons.dbcp.BasicDataSourceFactory">			<env-property name="username"        value="logcenter" />			<env-property name="password"        value="logcenter" />			<env-property name="driverClassName" value="com.postgresql.jdbc.Driver" />			<env-property name="url"             value="jdbc:postgresql://192.168.0.111:5432/logcenter" />			<env-property name="initialSize"     value="2" />			<env-property name="validationQuery" value="select 1" />		</datasourcefactory-connection>		<connection-lifecycle value="retain" />	</database-reference>    <plugin-loader name="EsperJMX" class-name="com.espertech.esper.jmx.client.EsperJMXPlugin">        <init-arg name="use-platform-mbean-server" value="true" />        <init-arg name="rmi-registry-port" value="1099" />    </plugin-loader>    <engine-settings>        <defaults>            <execution prioritized="true"/>             <metrics-reporting enabled="true" engine-interval="1000" statementinterval="1000" threading="true"/>                          </defaults>    </engine-settings>    <esperio-http-configuration>          <service name="myservice" port="8877" nio="false"/>          <get service="myservice" pattern="*"/>     </esperio-http-configuration> </esper-configuration>